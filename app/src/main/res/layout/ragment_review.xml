<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 제목 바 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평가하기"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textColor="#2196F3"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- 전체 별점 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체적으로 어떠셨나요?"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <RatingBar
            android:id="@+id/rating_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_gravity="center_horizontal"
            style="@style/BlueStarRatingBar" />

        <!-- 항목별 평가 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="항목별 평점"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- 맛 -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/radio_taste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="맛없음" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="보통" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맛있음" />
        </RadioGroup>

        <!-- 가격 -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/radio_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="비쌈" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="보통" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쌈" />
        </RadioGroup>

        <!-- 응대 -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="응대"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/radio_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친절함"
                android:layout_marginEnd="16dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:layout_marginEnd="16dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="불친절함" />
        </RadioGroup>

        <!-- 영수증 사진 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영수증 사진"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_photo_upload"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_receipt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 방문후기 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방문후기"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/et_review"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="음식, 서비스, 분위기, 위생상태 등의 방문 경험을 적어주세요."
            android:background="#F5F5F5"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine" />
    </LinearLayout>
</ScrollView>
