<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 뒤로가기 버튼 -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_back"
            android:clickable="true"
            android:focusable="true" />

        <!-- 가게 정보 박스 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/btn_white_box"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가게 이름"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_store_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="한식"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_store_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영업 중 · ⭐ 4.83 · 리뷰 595"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="5dp" />

            <!-- 대표 사진 -->
            <LinearLayout
                android:id="@+id/layout_store_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- ⭐ 정적 평점 표시 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="2dp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- 맛, 가격, 응대 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginStart="15dp">

            <!-- 맛 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛있음"
                    android:textColor="@color/color_selected"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛없음"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 가격 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쌈"
                    android:textColor="@color/color_selected"
                    android:textStyle="bold"
                    android:layout_marginStart="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:layout_marginStart="22dp"
                    android:textColor="@android:color/darker_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비쌈"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 응대 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="응대"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친절함"
                    android:textColor="@color/color_selected"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/darker_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불친절함"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- 리뷰어가 찍은 사진 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰어가 찍은 사진"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:id="@+id/layout_user_images"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <!-- 리뷰 텍스트 -->
        <TextView
            android:id="@+id/tv_review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰 내용"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</ScrollView>
