<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:focusable="true" />

    <!-- 대표 이미지 영역 -->
    <LinearLayout
        android:id="@+id/layout_store_images"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="0dp" />

    <!-- 가게 이름 + 별점 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밀알 식당"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_store_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_store_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업 중 · ⭐ 4.83 · 리뷰 595"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- 전화, 저장, 길찾기, 공유 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bright_gray"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="15dp">

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_bookmark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="12sp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:layout_marginTop="0dp">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_map"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길찾기"
                android:textSize="12sp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공유"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

    <!-- 탭 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/color_selected"
        app:tabIndicatorHeight="4dp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/black" />

    <!-- 탭별 콘텐츠 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_store"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
