    <style name="BlueStarRatingBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">#2196F3</item> <!-- 파란 별 -->
        <item name="colorControlNormal">#BDBDBD</item> <!-- 회색 빈 별 -->
